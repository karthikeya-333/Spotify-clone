<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>spotify</title>
    <link rel="stylesheet" href="styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
    <nav>
      <ul class="navul">
        <li class="brand"><img src="logo.png" alt="spotify">spotify</li>
        <li><a href="/">Home</a></li>
        <li>About</li>
      </ul>
    </nav>

    <div class="container">

      <div class="songList">
          <h1><%= playList %></h1>
          <div class="songitemsContainer">
            <%  for(var i=0 ; i<songs.length; i++){  %>
              <div class="songitem">
                <img src="<%= songs[i].coverPath %>" alt="1">
                <span class="songName"><%=songs[i].songName%></span>
                <span class="songlistPlay"><span class="timestamp">3:33 <i id="<%= i+1 %>" class="fa songItemPlay fa-solid fa-play-circle"></i></span></span>
              </div>
             <% } %>
          </div>
      </div>
      <div class="songBanner">

      </div>

    </div>

    <div class="bottom">
      <input type="range" name="range" id="myprogressbar" value="0" min="0" max="100">
      <div class="icons">
        <i class="fa-3x fa-solid fa-step-backward" id="previous"></i>
        <i class="fa-3x fa-solid fa-play-circle" id="masterPlay"></i>
        <i class="fa-3x fa-solid fa-step-forward" id="next"></i>
      </div>
      <div class="songinfo">
        <img src="playing.gif" width="42px" alt="gif" id="gif"><span id ="playingSong">Toofan</span></img>

      </div>


    </div>
   <script  type="module" src="script.js" charset="utf-8"></script>
   <script src="https://kit.fontawesome.com/177e2fbb59.js" crossorigin="anonymous"></script>
  </body>
</html>
